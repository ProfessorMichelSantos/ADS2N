#include <stdio.h>
#include <string.h>

typedef struct {
    char nome[100];
    int matricula;
    char horarioEntrada[6]; // formato HH:MM
    int autorizado; // 1 para sim, 0 para não
} Pessoa;

int main() {
    Pessoa pessoas[5]; // número fixo de pessoas

    for (int i = 0; i < 5; i++) {
        printf("Cadastro da pessoa %d:\n", i + 1);

        printf("Nome: ");
        fgets(pessoas[i].nome, sizeof(pessoas[i].nome), stdin);
        pessoas[i].nome[strcspn(pessoas[i].nome, "\n")] = '\0'; // remove o \n

        printf("Matrícula: ");
        scanf("%d", &pessoas[i].matricula);

        printf("Horário de entrada (HH:MM): ");
        scanf("%s", pessoas[i].horarioEntrada);

        printf("Está autorizado? (1 = sim, 0 = não): ");
        scanf("%d", &pessoas[i].autorizado);

        getchar(); // limpa o buffer do teclado
        printf("\n");
    }

    // Exibe os dados cadastrados
    printf("Dados cadastrados:\n");
    for (int i = 0; i < 5; i++) {
        printf("Pessoa %d:\n", i + 1);
        printf("Nome: %s\n", pessoas[i].nome);
        printf("Matrícula: %d\n", pessoas[i].matricula);
        printf("Horário de entrada: %s\n", pessoas[i].horarioEntrada);
        printf("Autorizado: %s\n\n", pessoas[i].autorizado ? "Sim" : "Não");
    }

    return 0;
}
